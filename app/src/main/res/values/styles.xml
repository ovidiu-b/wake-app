<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorAccent</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/colorPrimaryDark_2</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor</item>

        <!--Sirve para indicar que la ActionModeToolbar se ponga encima de la Toolbar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorBlackLight</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_white_24dp</item>

        <!--Switchs Colors-->
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorTurquoiseMedium</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#f1f1f1</item>

        <item name="android:homeAsUpIndicator">@null</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--NumberPicker Theme-->
    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <!--Remove divider lines-->
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="ToogleButtonAlarmDayTheme">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="ViewWithRippleEfectTheme">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ListWithScrollbarTheme">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_color</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
    </style>

</resources>
